<config>
    <modules>
        <Magemaven_Background>
            <version>1.0.0.0</version>
        </Magemaven_Background>
    </modules>
    <global>
        <models>
            <background>
                <class>Magemaven_Background_Model</class>
            </background>
        </models>
        <helpers>
            <background>
                <class>Magemaven_Background_Helper</class>
            </background>
        </helpers>
        <blocks>
            <background>
                <class>Magemaven_Background_Block</class>
            </background>
        </blocks>
    </global>
    <frontend>
        <layout>
            <updates>
                <background>
                    <file>background.xml</file>
                </background>
            </updates>
        </layout>
    </frontend>
    <default>
        <design>
            <background>
                <image />
                <mode>none</mode>
            </background>
        </design>
    </default>
</config>
